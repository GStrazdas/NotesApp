@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<br />

<div class="container-lg my-5 ">
    <div class=" row">
        <div class="col-sm-10 col-md-6 col-lg-4 mb-4">
                <div class="p-5 bg-secondary text-light rounded-3">
                    <from method="post">
                        <h5><input class="form-control"></input></h5>
                        <p><input class="form-control"> </input></p>
                        <button class="btn btn-success btn-sm">Add new note</button>
                    </from>
                </div>
            </div>
        @foreach(var note in Model.Notes)
        {
             <div class="col-sm-10 col-md-6 col-lg-4 mb-4">
                <div id=@note.Id class="p-5 bg-secondary text-light rounded-3 shadow-lg">
                    <h5>@note.Title</h5>
                    <p>@note.Content</p>
                    <div>
                        <button class="btn btn-success btn-sm">Edit</button>
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


